
<h1>Listing blogs</h1>
 <%= link_to 'New blog', new_blog_path %>
<table class="table table-hover" >
   
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Category</th>
    <th>Image</th>
    <th>Video</th>
     <th colspan="3"></th>
  </tr>
 
  <% @blogs.each do |blog| %>
    <tr>
     <td><%= blog.title %></td>
     <td><%= blog.description %></td>

      <td>
       <%if blog.category_id.present? %> 
         <%= Category.find(blog.category_id).name %> 
        <% end %> 
      </td>

      <td>
       <%#=image_tag blog.image,  :size => "300x300", :contros => true %>
       
      </td>

      <td><%= image_tag blog.image_url(:thumb) if blog.image? %></td>
        
      <td>
       <%= video_tag blog.video, :size => "300x210", :controls => true %>
      </td>
       
      <td><%= link_to 'Show', blog_path(blog) %></td>
      <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
      <td><%= link_to 'Destroy', blog_path(blog),method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>

