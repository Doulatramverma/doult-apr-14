
<h1>Listing blogs</h1>
 <%= link_to 'New blog', new_blog_path %>
<table>
   
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Category</th>
    <th>Image</th>

     <th>Video</th>
     <th colspan="3"></th>
  </tr>
 
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.description %></td>

      <td>

         <%if blog.category_id.present? %> 
         <%= Category.find(blog.category_id).name %> 
        <% end %> 
        </td> 
        <td><%=image_tag blog.image %></td>
        <td>
        <%= blog.video %>
      <%= video_tag blog.video, :size => "320x240", :controls => true %>
        </td>
       
      <td><%= link_to 'Show', blog_path(blog) %></td>
      <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
      <td><%= link_to 'Destroy', blog_path(blog),method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    </tr>

  <% end %>

</table>
</div>
</div>